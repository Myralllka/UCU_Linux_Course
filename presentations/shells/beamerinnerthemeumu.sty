% Title page
\defbeamertemplate*{title page}{umu}[1][]
{
\begin{textblock*}{10cm}(2cm,1.5cm)
{\usebeamercolor[fg]{author}\usebeamerfont{author}\sffamily\fontseries{semibold}\selectfont\insertinstitute}
\end{textblock*}

\begin{textblock*}{10cm}(2cm,2.0cm)
{\usebeamercolor[fg]{title}\usebeamerfont{title}\inserttitle}
\end{textblock*}

\begin{textblock*}{10cm}(2cm,3.2cm)
{\usebeamercolor[fg]{subtitle}\usebeamerfont{subtitle}\insertsubtitle}
\end{textblock*}

\begin{textblock*}{10cm}(2cm,5.75cm)
{\usebeamercolor[fg]{author}\usebeamerfont{author}\sffamily\fontseries{semibold}\selectfont\insertauthor}
\end{textblock*}

}

% Section page.
\defbeamertemplate*{section page}{focus}{%
    {%
        \usebeamercolor{frametitle}\colorlet{focus@@temp}{bg}%
        \begin{tikzpicture}[overlay, remember picture]
            \fill[color=focus@@temp] (current page.north west) rectangle ([shift = {(0, -0.45\paperheight)}] current page.north east);
        \end{tikzpicture}%
    }
    
    \vspace{-2\baselineskip}
    \begin{minipage}[b][0.45\paperheight]{\textwidth}
        \usebeamerfont{sectiontitle}
        \usebeamercolor[fg]{frametitle}
        \let\hyperlink\@secondoftwo\insertsection
    \end{minipage}
    
    \begin{minipage}[t][0.55\paperheight]{\textwidth}
    \end{minipage}
}

