\definecolor{ucugreyish}{HTML}{D8DEE9}
\definecolor{ucugrey}{HTML}{2E3440}
\definecolor{ucugrey2}{HTML}{3B4252}
\definecolor{ucugrey3}{HTML}{4C566A}
\definecolor{uculightgrey}{HTML}{4C566A}
\definecolor{ucuwhite}{HTML}{ECEFF4}
\definecolor{ucuyellow}{HTML}{EBCB8B}
\definecolor{ucublue}{HTML}{5E81AC}
\definecolor{ucured}{HTML}{BF616A}
\definecolor{ucugreen}{HTML}{A3BE8C}
\definecolor{ucuorange}{HTML}{D08770}

% Normal text
\setbeamercolor{normal text}{fg=ucuwhite}

% First page
\setbeamercolor*{title}{fg=ucugrey,bg=gray}
\setbeamercolor*{author}{fg=ucuwhite,bg=gray}
\setbeamercolor*{date}{fg=ucuwhite,bg=gray}

% Generic frames header and footer
\setbeamercolor{titlelike}{fg=black}
\setbeamercolor*{frametitle}{fg=ucugrey}
\setbeamercolor*{framesubtitle}{fg=ucugrey}
\setbeamercolor*{title in head/foot}{fg=black}
\setbeamercolor*{author in head/foot}{fg=black}

%Blocks
\setbeamercolor{block title}{bg=ucugrey!30,fg=black}
\setbeamercolor{block title alerted}{bg=ucured,fg=black}
\setbeamercolor{block title example}{bg=ucugreen,fg=black}
\setbeamercolor{block body}{bg=ucugreyish!5,fg=black}
\setbeamercolor{block body alerted}{bg=ucured!30,fg=black}
\setbeamercolor{block body example}{bg=ucugreen!30,fg=black}

% Lists
\setbeamercolor*{item}{fg=ucublue,bg=ucugrey}

% Quotation and quote
\setbeamercolor*{quotation}{fg=ucuwhite,bg=ucugrey}

% Verse
\setbeamercolor*{verse}{fg=ucuwhite,bg=ucugrey!5}

% Abstract
\setbeamercolor*{abstract}{fg=ucuwhite,bg=ucugrey!5}

% Table of contents 
\setbeamercolor*{structure}{fg=ucublue,bg=ucured}

% Bibliography
\setbeamercolor*{bibliography entry title}{fg=ucuwhite}
\setbeamercolor*{bibliography entry author}{fg=ucuwhite}
\setbeamercolor*{bibliography entry location}{fg=ucuwhite!70}
\setbeamercolor*{bibliography entry note}{fg=ucuwhite!70}

